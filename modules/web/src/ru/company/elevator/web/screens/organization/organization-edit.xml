<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://organizationEdit.caption"
        focusComponent="form"
        messagesPack="ru.company.elevator.web.screens.organization">
    <data>
        <instance id="organizationDc"
                  class="ru.company.elevator.entity.organization.Organization">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode width="auto" height="auto"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="organizationDc">
            <column width="350px">
                <textField id="innField" property="inn"/>
                <textField id="kppField" property="kpp"/>
                <textField id="shortNameField" property="shortName"/>
                <textField id="nameField" property="name"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
