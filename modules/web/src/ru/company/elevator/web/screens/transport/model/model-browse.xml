<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://modelBrowse.caption"
        focusComponent="modelsTable"
        messagesPack="ru.company.elevator.web.screens.transport.model">
    <data readOnly="true">
        <collection id="modelsDc"
                    class="ru.company.elevator.entity.transport.Model">
            <view extends="_local"/>
            <loader id="modelsDl">
                <query>
                    <![CDATA[select e from elevator_Model e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="modelsTable"
            spacing="true">
        <filter id="filter"
                applyTo="modelsTable"
                dataLoader="modelsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="modelsTable"
                    width="100%"
                    dataContainer="modelsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="description" maxTextLength="30"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="modelsTable.create"/>
                <button id="editBtn" action="modelsTable.edit"/>
                <button id="removeBtn" action="modelsTable.remove"/>
                <button id="excelBtn" action="modelsTable.excel"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
