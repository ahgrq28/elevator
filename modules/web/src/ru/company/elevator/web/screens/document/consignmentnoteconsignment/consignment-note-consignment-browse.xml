<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://consignmentNoteConsignmentBrowse.caption"
        focusComponent="consignmentNoteConsignmentsTable"
        messagesPack="ru.company.elevator.web.screens.document.consignmentnoteconsignment">
    <data readOnly="true">
        <collection id="consignmentNoteConsignmentsDc"
                    class="ru.company.elevator.entity.document.ConsignmentNoteConsignment">
            <view extends="_local">
                <property name="barn" view="_minimal"/>
                <property name="vehicle" view="_minimal"/>
                <property name="organization" view="_minimal"/>
                <property name="medicalExamination" view="_minimal"/>
            </view>
            <loader id="consignmentNoteConsignmentsDl">
                <query>
                    <![CDATA[select e from elevator_ConsignmentNoteConsignment e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="consignmentNoteConsignmentsTable"
            spacing="true">
        <filter id="filter"
                applyTo="consignmentNoteConsignmentsTable"
                dataLoader="consignmentNoteConsignmentsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="consignmentNoteConsignmentsTable"
                    width="100%"
                    dataContainer="consignmentNoteConsignmentsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="medical"/>
            </actions>
            <columns>
                <column id="number"/>
                <column id="date"/>
                <column id="grade"/>
                <column id="barn"/>
                <column id="vehicle"/>
                <column id="organization"/>
                <column id="medicalExamination"/>
                <column id="left"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="consignmentNoteConsignmentsTable.create"/>
                <button id="editBtn" action="consignmentNoteConsignmentsTable.edit"/>
                <button id="removeBtn" action="consignmentNoteConsignmentsTable.remove"/>
                <button id="medicalBtn" action="consignmentNoteConsignmentsTable.medical"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
