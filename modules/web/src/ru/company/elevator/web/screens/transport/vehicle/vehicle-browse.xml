<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://vehicleBrowse.caption"
        focusComponent="vehiclesTable"
        messagesPack="ru.company.elevator.web.screens.transport.vehicle">
    <data readOnly="true">
        <collection id="vehiclesDc"
                    class="ru.company.elevator.entity.transport.Vehicle">
            <view extends="_local">
                <property name="model" view="_minimal"/>
                <property name="user" view="_minimal"/>
                <property name="organization" view="_minimal"/>
            </view>
            <loader id="vehiclesDl">
                <query>
                    <![CDATA[select e from elevator_Vehicle e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="vehiclesTable"
            spacing="true">
        <filter id="filter"
                applyTo="vehiclesTable"
                dataLoader="vehiclesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="vehiclesTable"
                    width="100%"
                    dataContainer="vehiclesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="number"/>
                <column id="model"/>
                <column id="user"/>
                <column id="organization"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="vehiclesTable.create"/>
                <button id="editBtn" action="vehiclesTable.edit"/>
                <button id="removeBtn" action="vehiclesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
